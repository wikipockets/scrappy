<!--Homepage-->
<div class="container">
   <div class="col-md-8 offset-md-2 mt-4">
      {{#if article}}
      {{#each article}}
      <div class="panel panel-default mt-4">
         <div class="panel-heading">
            <h4>{{this.title}}</h4>
         </div>
         <div class="panel-body">
            <p> {{this.summary}}</p>
            <p><a href="{{this.link}} target=" _blank">{{this.link}}</a></p>
            <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
            <hr>
         </div>
      </div>
      {{/each}}
      {{else}}
      <div class="panel panel-default">
         <div class="panel-body">
            <p>No articles to view.</p>
         </div>
      </div>
      {{/if}}
   </div>
</div>